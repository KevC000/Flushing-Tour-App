<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_margin="16dp"
    card_view:cardCornerRadius="4dp">
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/location_image"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="centerCrop"></ImageView>

    <TextView
        android:id="@+id/location_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/location_name"
        tools:text=""></TextView>

    <TextView
        android:id="@+id/location_description_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/location_description"
        android:layout_marginBottom="8dp"></TextView>

    <RelativeLayout
        android:id="@+id/link_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_link"
            android:layout_width="@dimen/icon"
            android:layout_height="@dimen/icon"
            android:src="@drawable/baseline_link_24"></ImageView>

        <TextView
            android:id="@+id/link_text"
            android:layout_toRightOf="@id/image_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text=""></TextView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/map_layout">

        <ImageView
            android:id="@+id/image_map_link"
            android:layout_width="@dimen/icon"
            android:layout_height="@dimen/icon"
            android:src="@drawable/baseline_place_24"></ImageView>

        <TextView
            android:id="@+id/map_location_text"
            android:layout_toRightOf="@id/image_map_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text=""></TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/phone_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_phone_link"
            android:layout_width="@dimen/icon"
            android:layout_height="@dimen/icon"
            android:src="@drawable/baseline_call_24"></ImageView>

        <TextView
            android:id="@+id/phone_text"
            android:layout_toRightOf="@id/image_phone_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text=""></TextView>
    </RelativeLayout>

</LinearLayout>

</androidx.cardview.widget.CardView>

